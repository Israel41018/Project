@{
	Layout = null;
}

<html lang="en">
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <title>Inicio | Consultores de negocio con Perspectiva Internacional</title>
      <meta name="keywords" content="" />
      <meta name="description" content="Inicio del Sitio de Russell Bedford Internacional, en Costa Rica, Consultores de negocio con Perspectiva Internacional." />
      <meta name="author" content="Russell Bedford Costa Rica" />
      <meta name="theme-color" content="#ffffff">
      <link rel="shortcut icon" href="/favicon.ico" />
      <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
      <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
      <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
      <link href="/css/style.css" rel="stylesheet" />
      <link href="/css/custom.css" rel="stylesheet" />
      <!-- 
         <link href="/css/rteContent.css?v=637471134393580304" rel="stylesheet" />
         -->
      <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css" rel="stylesheet" />
      <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js"></script>
      <script src="https://maps.google.com/maps/api/js?key=AIzaSyAxWir97wwHN-brMyWH8uue6gFlXZ6YrRY"></script>
      <!-- Font Awesome -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />
      <!-- Moment JS -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous"></script>
      <!-- 
         <script src="/resources/js/infobox.js"></script>
         <script src="/resources/js/jquery.validate.min.js"></script>
         <script src="/resources/js/moment.js"></script>
         <script src="/resources/js/moment-timezone.js"></script>
         <script src="/resources/js/jstz.min.js"></script>
         <script src="/scripts/jquery.validate.unobtrusive.min.js"></script>
         <script src="/scripts/jquery.unobtrusive-ajax.js"></script>
         <script src="https://use.fontawesome.com/7234dc0b06.js"></script>
         -->
   </head>
   <body>
       @Html.Partial("navbar")
       @Html.Partial("blueHeader")
       
       <section class="page-container">
           <div class="container">
               <div class="row">
                   <div class="col-md-12">
                       <div class="page-content">
                           <h2>Videos</h2>
                           <ul>
                               <li><a target="_blank" href="http://www.youtube.com/watch?v=kBcujhxt3AM">Business Consultants with a Global Perspective: a film about Russell Bedford International</a></li>
                               <li><a target="_blank" href="http://www.youtube.com/watch?v=Yij903F4qrI">A Fresh Perspective: a film on Lubbock Fine</a></li>
                               <li><a target="_blank" href="http://www.youtube.com/watch?v=LDZ4HJPRhzk">Lubbock Fine – Our services for Charities</a></li>
                               <li><a target="_blank" href="http://www.youtube.com/watch?v=yuEZHYwE8h0">Russell Bedford – Helping to Make a Difference</a></li>
                               <li><a target="_blank" href="http://www.youtube.com/watch?v=cmdMckj6RV4">Russell Bedford North America – Global Reach, Local Presence</a></li>
                            </ul>
                       </div>
                   </div>
               </div>
           </div>
           <div class="container">
               <div class="row">
                   <div class="col-md-12">
                       <h2>Publicaciones</h2>
                       
                       @foreach ( var item in Model.Children )
                       {
                            <div class="row">
                                <div class="col-md-4 col-xs-12">
                                    <a href=@item.Url>
                                        <img src="https://via.placeholder.com/300" width="300" height="180">
                                    </a>
                                </div>
                                <div class="col-md-8 col-xs-12">
                                    <h3 class="title">
                                        <a href=@item.Url>@item.Value("title")</a>
                                    </h3>
                                    @item.Value("title")
                                    <p>
                                        <a href=@item.Url></a>
                                    </p>
                                </div>
                            </div>
                       }
                   </div>
               </div>
           </div>
        </section>
        @Html.Partial("subFooter")
        @Html.Partial("footer")
   </body>
</html>